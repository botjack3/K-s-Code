
#include <stdio.h>
float recursivePower(float,float);

float recursivePower(float num1,float num2){
	if(num2==1){
		return num1;
	}
	if(num2==0){
		return 1;
	} else{
		return recursivePower(num1,num2-1)*num1;
	}
}
int main()
{
   /*  Write C code in this online editor and run it. */
   printf("%.2f",recursivePower(4,3));
   
   return 0;
}
